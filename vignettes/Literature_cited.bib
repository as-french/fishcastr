	keywords = {Bias correction, Climate impact indicators, Fire danger, Quantile mapping, Seasonal forecasting, System 4},
	pages = {101--110},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\afrench.INSTITUTE\\Zotero\\storage\\LF33PE3I\\Bedia et al. - 2018 - Seasonal predictions of Fire Weather Index Paving.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\afrench.INSTITUTE\\Zotero\\storage\\X6RMM6JY\\S2405880716300826.html:text/html}
